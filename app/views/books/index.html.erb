<h3>Books</h3>

<table>
    <thead>
        <tr>
            <th>title</th>
            <th>body</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "show", book_path(book.id) %></td>
           <td><%= link_to "edit", edit_book_path(book.id) %></td>
            <td><%= link_to "destroy", destroy_book_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<h1>New book</h1>
<%= form_for(@book, url: '/books') do |f| %>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
  	<h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>

<% end %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <div>
  <%= f.submit 'Create Book' %></div>
<% end %>